@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using BTL.Models
@model List<HoaDonBan>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaHdb)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayBan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaNhanVienNavigation.TenNhanVien)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaKhachHangNavigation.TenKhachHang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TongTien)
        </td>
        <td>
            <a class=" btn btn-sm btn-success" asp-controller="Admin" asp-action="SuaHDX" asp-route-MaHdb="@item.MaHdb">Sửa</a>
            <a class=" btn btn-sm btn-primary" asp-controller="Admin" asp-action="ChiTietHDX" asp-route-MaHdb="@item.MaHdb">Chi tiết</a>
            <a class="btn btn-sm btn-danger" asp-controller="Admin" asp-action="XoaHDX" asp-route-MaHdb="@item.MaHdb">Xóa</a>
        </td>
    </tr>
}