@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using BTL.Models
@model List<HangSanXuat>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaHsx)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenHsx)
        </td>

        <td>
            <a class=" btn btn-sm btn-success" asp-controller="Admin" asp-action="SuaHSX" asp-route-MaHsx="@item.MaHsx">Sửa</a>
            <a class=" btn btn-sm btn-primary" asp-controller="Admin" asp-action="ChiTietHSX" asp-route-MaHsx="@item.MaHsx">Chi tiết</a>
            <a class="btn btn-sm btn-danger" asp-controller="Admin" asp-action="XoaHSX" asp-route-MaHsx="@item.MaHsx">Xóa</a>
        </td>
    </tr>
}