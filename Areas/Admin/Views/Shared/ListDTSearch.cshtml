@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using BTL.Models
@model List<DienThoai>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaHsxNavigation.TenHsx)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.HeDieuHanh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaNhap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaBan)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                <img src="@Url.Content("~/img/" + item.Anh)" alt="" width="60px" />
                @* @Html.DisplayFor(modelItem => item.Anh)*@
            </td>


            <td>
            <a class=" btn btn-sm btn-success" asp-controller="Admin" asp-action="SuaSanPham" asp-route-MaDienThoai="@item.MaDienThoai">Sửa</a>
            <a class=" btn btn-sm btn-primary" asp-controller="Admin" asp-action="ChiTietSanPham" asp-route-MaDienThoai="@item.MaDienThoai">Chi tiết</a>
            <a class="btn btn-sm btn-danger" asp-controller="Admin" asp-action="XoaSanPham" asp-route-MaDienThoai="@item.MaDienThoai">Xóa</a>
            </td>
        </tr>
    }


