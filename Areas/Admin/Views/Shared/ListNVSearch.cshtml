@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using BTL.Models
@model List<NhanVien>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenNhanVien)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgaySinh)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.SoDienThoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GioiTinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>


        <td>
            <img src="@Url.Content("~/img/" + item.AnhDaiDien)" alt="" width="60px" />
            @* @Html.DisplayFor(modelItem => item.Anh)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaChucVuNavigation.TenChucVu)
        </td>


        <td>
            <a class=" btn btn-sm btn-success" asp-controller="Admin" asp-action="SuaNV" asp-route-MaNhanVien="@item.MaNhanVien">Sửa</a>
            <a class=" btn btn-sm btn-primary" asp-controller="Admin" asp-action="ChiTietNV" asp-route-MaNhanVien="@item.MaNhanVien">Chi tiết</a>
            <a class="btn btn-sm btn-danger" asp-controller="Admin" asp-action="XoaNV" asp-route-MaNhanVien="@item.MaNhanVien">Xóa</a>
        </td>
    </tr>
}