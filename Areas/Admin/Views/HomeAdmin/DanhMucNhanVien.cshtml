<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Tên Nhân Viên
                            </th>
                            <th>
                                Ngày sinh
                            </th>
                            <th>
                                Số Điện Thoại
                            </th>
                            <th>
                                Giới Tính
                            </th>
                            <th>
                                Địa Chỉ
                            </th>
                            <th>
                                Ảnh Đại Diện
                            </th>
                            <th>
                                Chức Vụ
                            </th>
                        </tr>
                    </thead>
                    <tbody id="records_table">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenNhanVien)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NgaySinh)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.SoDienThoai)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GioiTinh)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiaChi)
                                </td>

                                
                                <td>
                                    <img src="@Url.Content("~/img/" + item.AnhDaiDien)" alt="" width="60px" />
                                    @* @Html.DisplayFor(modelItem => item.Anh)*@
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaChucVuNavigation.TenChucVu)
                                </td>


                                <td>
                                    <a class=" btn btn-sm btn-success" asp-action="SuaNV" asp-route-MaNhanVien="@item.MaNhanVien">Sửa</a>
                                    <a class=" btn btn-sm btn-primary" asp-action="ChiTietNV" asp-route-MaNhanVien="@item.MaNhanVien">Chi tiết</a>
                                    <a class="btn btn-sm btn-danger" asp-action="XoaNV" asp-route-MaNhanVien="@item.MaNhanVien">Xóa</a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Html.PagedListPager(Model,page => Url.Action("DanhMucNhanVien", new {page=page}),new X.PagedList.Web.Common.PagedListRenderOptions(){
	LiElementClasses = new List<String> {"page-item"},
	PageClasses = new List<String> {"page-link"}
})

@section Script{
    <script>
        $(document).ready(function () {
            $("#keyword").keyup(function () {
                var strkeyword = $('#keyword').val();
                $.ajax({
                    url: 'https://localhost:7229/Admin/TimKiem/FindNV/',
                    datatype: "json",
                    type: "POST",
                    data: { keyword: strkeyword },
                    async: true,
                    success: function (results) {
                        $('#records_table').html("");
                        $('#records_table').html(results);
                    },
                    error: function (xhr) {
                        alert('error');
                    }
                });
            });
            $("#keyword").keyup(function () {
                var strkeyword = $('#keyword').val();
                $.ajax({
                    url: 'https://localhost:7229/Admin/TimKiem/FindNVCV/',
                    datatype: "json",
