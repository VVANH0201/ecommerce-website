
@using BTL.Models
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<NhanVien>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "DanhMucNhanVien";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <ul class="navbar-nav mr-lg-2 col-lg-8 m-3">
        <li class="nav-item nav-search d-none d-lg-block ">
            <div class="input-group">
                <input id="keyword" name="keyword" type="text" class="form-control" placeholder="Search Here..." aria-label="search" aria-describedby="search">
            </div>
        </li>
    </ul>
    <div class="col-lg-3">
        <p>
            <a class="btn btn-success mt-3" asp-area="Admin" asp-controller="HomeAdmin" asp-action="ThemNhanVien">Thêm Mới</a>
        </p>

    </div>
</div>
