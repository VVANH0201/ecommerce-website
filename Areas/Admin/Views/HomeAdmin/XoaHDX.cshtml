@model BTL.Models.HoaDonBan

@{
    ViewData["Title"] = "XoaHDX";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>HoaDonBan</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Ngày Bán
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayBan)
        </dd>
        <dt class = "col-sm-2">
            Tổng Tiền
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TongTien)
        </dd>
        <dt class = "col-sm-2">
            Khách Hàng
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.KH
        </dd>
        <dt class = "col-sm-2">
            Nhân Viên
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.NV
        </dd>
    </dl>
    
    <form asp-action="XoaHDX">
        <input type="hidden" asp-for="MaHdb" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> 
        <a class="btn btn-info" asp-action="DanhMucHDX">Quay Lại</a>
    </form>
</div>
