@*@model IEnumerable<BTL.Models.DienThoai>*@
@using BTL.Models
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<DienThoai>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "DanhMucSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row">
    <ul class="navbar-nav mr-lg-2 col-lg-8 m-3">
        <li class="nav-item nav-search d-none d-lg-block ">
            <div class="input-group">
                <input id="keyword" name="keyword" type="text" class="form-control" placeholder="Search Here..." aria-label="search" aria-describedby="search">
            </div>
        </li>
    </ul>
    <div class="col-lg-3">
        <p>
            <a class="mt-3 btn btn-success" asp-area="Admin" asp-controller="HomeAdmin" asp-action="ThemDienThoai">Thêm mới</a>
        </p>

    </div>
</div>


<div class="col-lg-12 grid-margin stretch-card">
    
    <div class="card">

        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Tên điện thoại
                            </th>
                            <th>
                                Hãng sản xuất
                            </th>
                            <th>
                                Hệ điều hành
                            </th>
                            <th>
                                Giá nhập
                            </th>
                            <th>
                                Giá Bán
                            </th>
                            <th>
                                Số lượng
                            </th>
                            <th>
                                Ảnh
                            </th>
                        </tr>
                    </thead>
                    <tbody id="records_table">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenDienThoai)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaHsxNavigation.TenHsx)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.HeDieuHanh)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GiaNhap)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GiaBan)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.SoLuong)
                                </td>
                                <td>
                                    <img src="@Url.Content("~/img/" + item.Anh)" alt="" width="60px" />
                                    @* @Html.DisplayFor(modelItem => item.Anh)*@
                                </td>


                                <td>
                                    <a class=" btn btn-sm btn-success" asp-action="SuaSanPham" asp-route-MaDienThoai="@item.MaDienThoai">Sửa</a>
                                    <a class=" btn btn-sm btn-primary" asp-action="ChiTietSanPham" asp-route-MaDienThoai="@item.MaDienThoai">Chi tiết</a>
                                    <a class="btn btn-sm btn-danger" asp-action="XoaSanPham" asp-route-MaDienThoai="@item.MaDienThoai">Xóa</a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Html.PagedListPager(Model,page => Url.Action("DanhMucSanPham", new {page=page}),new X.PagedList.Web.Common.PagedListRenderOptions(){
	LiElementClasses = new List<String> {"page-item"},
	PageClasses = new List<String> {"page-link"}
})
@section Script{
    <script>
        $(document).ready(function () {
            $("#keyword").keyup(function () {
                var strkeyword = $('#keyword').val();
                $.ajax({
                    url: 'https://localhost:7229/Admin/TimKiem/FindDT/',
                    datatype: "json",
                    type: "POST",
                    data: { keyword: strkeyword },
                    async: true,
                    success: function (results) {
                        $('#records_table').html("");
                        $('#records_table').html(results);
                    },
                    error: function (xhr) {
                        alert('error');
                    }
                });
            });
            $("#keyword").keyup(function () {
                var strkeyword = $('#keyword').val();
                $.ajax({
                    url: 'https://localhost:7229/Admin/TimKiem/FindDTTheoHSX/',
                    datatype: "json",
                    type: "POST",
                    data: { keyword: strkeyword },
                    async: true,
                    success: function (results) {
                        $('#records_table').html("");
                        $('#records_table').html(results);
                    },
                    error: function (xhr) {
                        alert('error');
                    }
                });
            });
            $("#keyword").keyup(function () {
                var strkeyword = $('#keyword').val();
                $.ajax({
                    url: 'https://localhost:7229/Admin/TimKiem/FindDTTheoHDH/',
                    datatype: "json",
                    type: "POST",
                    data: { keyword: strkeyword },
                    async: true,
                    success: function (results) {
                        $('#records_table').html("");
                        $('#records_table').html(results);
                    },
                    error: function (xhr) {
                        alert('error');
                    }
                });
            });
        });

    </script>
}
    


    