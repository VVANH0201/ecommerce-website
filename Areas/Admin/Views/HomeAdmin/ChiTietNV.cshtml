@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model BTL.Models.NhanVien

@{
    ViewData["Title"] = "ChiTietNV";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Họ và Tên
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenNhanVien)
        </dd>
        <dt class = "col-sm-2">
            Ngày Sinh
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>
        <dt class = "col-sm-2">
            Số Điện Thoại
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SoDienThoai)
        </dd>
        <dt class = "col-sm-2">
            Giới Tính
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GioiTinh)
        </dd>
        <dt class = "col-sm-2">
            Địa Chỉ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiaChi)
        </dd>
        <dt class = "col-sm-2">
           Ảnh
        </dt>
        <dd class = "col-sm-10">
            <img src="@Url.Content("~/img/" + Model.AnhDaiDien)" width="100px" />
        </dd>
        <dt class = "col-sm-2">
            Chức Vụ
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.ChucVu
        </dd>
        
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="SuaNV" asp-route-MaNhanVien="@Model?.MaNhanVien">Sửa</a> 
    <a class="btn btn-info" asp-action="DanhMucNhanVien">Quay lại</a>
</div>
