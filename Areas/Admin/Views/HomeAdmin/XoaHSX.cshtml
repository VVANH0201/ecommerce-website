@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model BTL.Models.HangSanXuat

@{
    ViewData["Title"] = "XoaHSX";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h3>Bạn có muốn xóa ?</h3>
<div>
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên Hãng Sản Xuất
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenHsx)
        </dd>
    </dl>
    
    <form asp-action="XoaHSX">
        <input type="hidden" asp-for="MaHsx" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="DanhMucHSX">Quay lại</a>
    </form>
</div>
